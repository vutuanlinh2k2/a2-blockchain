{
  "name": "a2-blockchain",
  "version": "1.0.0",
  "description": "A TypeScript blockchain implementation with Proof-of-Work consensus, UTXO model, and CLI interface",
  "main": "dist/main.js",
  "bin": {
    "blockchain": "dist/main.js"
  },
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/main.ts",
    "start": "node dist/main.js",
    "dev:watch": "nodemon --exec ts-node src/main.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rm -rf dist",
    "build:watch": "tsc --watch",
    "cli": "ts-node src/main.ts"
  },
  "keywords": [
    "blockchain",
    "cryptocurrency",
    "proof-of-work",
    "utxo",
    "typescript",
    "cli",
    "sqlite"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/figlet": "^1.5.6",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.19.9",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "eslint": "^8.49.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "chalk": "^4.1.2",
    "commander": "^11.0.0",
    "figlet": "^1.6.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
